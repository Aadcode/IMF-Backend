{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "lib": ["ES2020", "DOM"],
    "typeRoots": [ "./node_modules/@types", "../node_modules/@types", "../../node_modules/@types" ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}